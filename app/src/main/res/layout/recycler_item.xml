<?xml version="1.0" encoding="utf-8"?>
<!-- "@dimen/list_item2_height" NOTE: should use FrameLayout or RelativeLayout for parent of the "@id/container" view (for Android 2.3 compatibility) -->
<FrameLayout
    style="@style/commonListItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item2_height"
    android:layout_marginTop="8dp"
    android:background="#ffffff">

    <!--android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp"
        android:clickable="true"-->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">
            <!-- NOTE: the drag handle should set android:clickable=true not to propagate click events to the parent views-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp">
            <View
                android:id="@+id/drag_handle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#20000000"
                android:clickable="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:text="Title"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:layout_alignParentTop="true"
                android:textAppearance="?android:textAppearanceLarge" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescription"
                android:text="Description"
                android:paddingEnd="30dp"
                android:paddingRight="30dp"
                android:layout_alignParentBottom="true"
                android:textAppearance="?android:textAppearanceSmall"

                android:layout_below="@id/txtDescription"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8942;"
                android:id="@+id/txtOptionDigit"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="14dp"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <!--/android.support.v7.widget.CardView-->
</FrameLayout>