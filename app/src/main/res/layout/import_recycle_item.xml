<?xml version="1.0" encoding="utf-8"?>
<!-- "@dimen/list_item2_height" NOTE: should use FrameLayout or RelativeLayout for parent of the "@id/container" view (for Android 2.3 compatibility) -->
<FrameLayout
    style="@style/commonListItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item2_height"
    android:layout_marginTop="8dp"
    android:background="#ffffff">

    <!--android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp"
        android:clickable="true"-->
    <FrameLayout
        android:id="@+id/import_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">
        <!-- NOTE: the drag handle should set android:clickable=true not to propagate click events to the parent views-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:paddingLeft="4dp">

            <!--View
                android:id="@+id/drag_handle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="#20000000"
                android:clickable="true"
                /-->

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|left"
                android:clickable="true"
                android:paddingTop="5dp"
                />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:paddingEnd="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="0dp"
                    android:paddingLeft="5dp"
                    android:text="Title"
                    android:textSize="20dp"
                    android:textAppearance="?android:textAppearanceLarge"

                    />


        </LinearLayout>
    </FrameLayout>
    <!--/android.support.v7.widget.CardView-->
</FrameLayout>