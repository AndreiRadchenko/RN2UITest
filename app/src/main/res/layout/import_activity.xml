<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/import_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/invitation_txt"
        style="@style/DescriptionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/import_toolbar"
        android:paddingTop="10dp"
        android:autoLink="email"
        android:textSize="15sp"
        android:text="@string/invitation"
        android:visibility="invisible" />
    <!-- Будьласка, надішліть мені посилання на сторінки з описом USSD команд операторів зв'язку
             і SMS команд банків Вашої країни, і я додам можливість завантажити їх у додаток -->

    <TextView
        android:id="@+id/demo_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="1sp"
        android:visibility="invisible" />

    <!--TextView
        android:id="@+id/demo_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/import_toolbar"
        android:clickable="false"
        android:layout_marginTop="20dp"
        android:text="Galery"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible" /-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/import_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/import_toolbar"
        android:padding="0dp" />


</RelativeLayout>