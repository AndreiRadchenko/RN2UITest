<?xml version="1.0" encoding="utf-8"?>
<!-- "@dimen/list_item2_height" NOTE: should use FrameLayout or RelativeLayout for parent of the "@id/container" view (for Android 2.3 compatibility) -->
<FrameLayout
    style="@style/commonListItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item2_height"
    android:layout_marginTop="8dp"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">
            <!-- NOTE: the drag handle should set android:clickable=true not to propagate click events to the parent views-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp">

            <ImageView
                android:id="@+id/my_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|left"
                android:clickable="true"
                android:paddingTop="5dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:paddingLeft="14dp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:paddingEnd="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="0dp"
                    android:text="Title"
                    android:textSize="20dp"
                    android:textAppearance="?android:textAppearanceLarge"

                    />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below = "@+id/txtTitle"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:paddingEnd="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Description"
                    />
                <!--android:textAppearance="?android:textAppearanceSmall"
                android:layout_below="@id/txtDescription"-->

                <TextView
                    android:id="@+id/txtOptionDigit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="14dp"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
    <!--/android.support.v7.widget.CardView-->
</FrameLayout>