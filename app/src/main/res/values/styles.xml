<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.
        Theme.AppCompat.Light.DarkActionBar-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/select_toolbar_background</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="recyclerItemStyle">@style/AppTheme.recycler_item_style</item>
        <item name="TitleStyle">@style/DarkTitle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.
        Theme.AppCompat.Light.DarkActionBar-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/select_toolbar_background</item>
    </style>

    <style name="AppTheme.Settings.Dark" parent="Theme.AppCompat">  </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@android:color/white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
    </style>

    <style name="AppTheme.PINWindow" parent ="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="exampleLauncherButtonStyle">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="commonListItemStyle">
    </style>

    <style name="sectionHeaderItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DescriptionTextStyle" parent="RegularMonoSerif">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme" />

    <style name="Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="recyclerItemStyle">@style/Theme.Dark.recycler_item_style</item>
        <item name="TitleStyle">@style/LightTitle</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/select_toolbar_background</item>

    </style>

    <style name="Theme.Dark.recycler_item_style">
        <item name="android:background">@color/select_mod_status_bar</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.Dark.PINWindow" parent ="Theme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.recycler_item_style">
        <item name="android:background">@color/bg_item_normal_state</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DarkTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="LightTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
